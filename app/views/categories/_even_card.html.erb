<article class="col-6 col-md-3 p-0">
  <div class="card border-0">
    <div class="card-img vh-40">
      <% if article.image.attached? %>
        <%= image_tag(article.image, class: 'article-img w-100 vh-40') %>
      <% end %>
      <a href="#">
        <% if article.categories.any? %>
          <span class="even-category text-white transparent-bg"><%= article.categories.first.name.upcase %></span>
        <% end %>
      </a>
    </div>
    <div class="card-body vh-40">
      <h5 class="card-title"><strong><%= article.title %></strong></h5>
      <p class="card-text"><%= article.text[0..50] + '...' %></p>
      <%= link_to 'read more...', article_path(article), class: 'text-orange' %>
    </div>
  </div>
</article>

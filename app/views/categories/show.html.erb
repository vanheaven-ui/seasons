<section class="category-articles-page container-fluid">
  <div class="row">
    <% @category.articles.each do |article| %>
      <article class="col-6 col-md-3 p-0">
        <div class="card border-0">
          <div class="ph">
            <% if article.image.attached? %>
              <%= image_tag(article.image.variant(resize: "100%!"), class: 'article-img w-100') %>
            <% end %>
            <a href="#">
              <% if article.categories.any? %>
                <span class="category text-orange"><%= article.categories.first.name %></span>
              <% end %>
            </a>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= article.title %></h5>
            <p class="card-text"><%= article.text %></p>
            <%= link_to 'read more...', article_path(article), class: "text-orange" %>          
          </div>
        </div>
      </article>
    <% end %>
  </div>
</section>

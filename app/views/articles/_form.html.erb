<%= form_for(@article, local: true, class: 'text-white w-75 mx-auto') do |form| %>
  <% render 'shared/form_errors', resource: article %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control', 
                                placeholder: 'Enter title here',
                                autofocus: true %>
  </div>

  <div class="form-group">
    <%= form.label :text %>
    <%= form.text_area :text, class: 'form-control', placeholder: 'Enter text here' %>
  </div>

  <div class="form-group">
    <%= form.label :image %><br />
    <%= form.file_field :image %>
  </div>

  <div class="form-group">
    <%= form.label :category_id, 'Category'%>
    <%= form.collection_select(:category_ids, Category.all.order(:name), :id, :name, {}, { class: 'form-control' }) %>
  </div>

  <div class="actions">
    <p class='text-center'><%= form.submit %></p>
  </div>
<% end %>

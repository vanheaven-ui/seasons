<%= form_for(@article, local: true, html: { class: 'text-white w-75 mx-auto' }) do |form| %>
  <%= render 'shared/form_errors', resource: @article %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control', 
                                placeholder: 'Enter title here',
                                autofocus: true %>
  </div>

  <div class="form-group">
    <%= form.label :text %>
    <%= form.text_area :text, rows: 5,
                              class: 'form-control',
                              placeholder: 'Enter text here' %>
  </div>

  <div class="form-group">
    <%= form.label :image %><br />
    <%= form.file_field :image %>
  </div>

  <div class="form-group">
    <%= form.label 'Category'%><br />
    <%= form.collection_check_boxes(:category_ids, Category.all, :id, :name) %>
  </div>

  <div class="actions text-center">
    <%= form.submit %> 
  </div>
<% end %>
